{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tsuchinoko",
  "version": "0.1.0",
  "identifier": "com.tsuchinoko.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "tsuchinoko",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        {
          "host": "tsuchinoko.com",
          "pathPrefix": [
            "/open"
          ]
        }
      ],
      "desktop": {
        "schemes": [
          "tsuchinoko"
        ]
      }
    }
  }
}