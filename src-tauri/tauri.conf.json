{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tsuuchinoko",
  "version": "0.1.4",
  "identifier": "com.tsuuchinoko.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "tsuuchinoko",
        "width": 800,
        "height": 600,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIyOUQ0M0RCQjdFQjMzMTAKUldRUU0rdTMyME9kSW5lUE5qZEMzUXZrSWFLSHlzTnVhN2ZTRmVnQW1PZ1hRZUgvQnRKc0lYZkgK",
      "endpoints": [
        "https://github.com/seanluse41/tsuchinoko-desktop/releases/latest/download/latest.json"
      ]
    },
    "deep-link": {
      "mobile": [
        {
          "host": "seanbase.com",
          "pathPrefix": [
            "/tsuuchinoko-auth"
          ]
        }
      ],
      "desktop": {
        "schemes": [
          "tsuuchinoko"
        ]
      }
    },
    "shell": {
      "open": true
    }
  }
}